@model IEnumerable<StarWeb.Models.Tile>
@using StarWeb.Models;

@{ ViewBag.Title = "Play Star Web!"; }



<style>
	.grid-container {
		display: grid;
		grid-template-columns: auto auto auto auto auto auto auto auto auto auto;
		background-color: rgba(0, 0, 0, 1);
		background-image: url(/Images/SpaceWebImage2.png);
		padding: 1px;
	}

	.grid-item {
		background-color: rgb(0, 0, 0);
		border: 1px solid rgba(0, 0, 0,1);
		padding: 2px;
		font-size: 15px;
		text-align: center;
	}

	.bg-primary {
		background-color: rgb(0, 0, 0);
	}
</style>



<p>
	<div class="dropdown">

		<button type="button" class="btn btn-success dropdown-toggle"
				data-toggle="dropdown">
			Select Actions
		</button>

		<div class="dropdown-menu">
			<a class="dropdown-item" @Html.ActionLink("New Game", "NewGame")</a><br />
			<a class="dropdown-item" @Html.ActionLink("Move North", "MoveNorth")</a><br />
			<a class="dropdown-item" @Html.ActionLink("Move South", "MoveSouth")</a><br />
			<a class="dropdown-item" @Html.ActionLink("Move East", "MoveEast")</a><br />
			<a class="dropdown-item" @Html.ActionLink("Move West", "MoveWest")</a><br />
			<a class="dropdown-item" href="#">Self Destruct</a><br />
		</div>
	</div>

	<table class="table">
		<tr>
			<th>@Html.ActionLink("Up", "MoveNorth", null, new { @class = "btn btn-link" })</th>
			<th>@Html.ActionLink("Down", "MoveSouth", null, new { @class = "btn btn-link" })</th>
			<th>@Html.ActionLink("Left", "MoveWest", null, new { @class = "btn btn-link" })</th>
			<th>@Html.ActionLink("Right", "MoveEast", null, new { @class = "btn btn-link" })</th>
			<th><audio controls>
				<source src="~/Audio/PPK.mp3" type="audio/mpeg" autoplay="true">
				Your browser does not support the audio tag.
			</audio></th>

		</tr>

	</table>>
</p>






<div class="grid-container">



	@foreach (var item in Model) {
	
		<img src=@item.ImageLocation alt="IMAGES" width="50" />
	


	}
</div>

